{
  "name": "albion",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "debug": "NODE_OPTIONS='--inspect' next dev",
    "format": "prettier --write .",
    "pregenerate": "find . -regex '.*__generated__' -type d -prune -exec rm -r {} \\;",
    "graphql-schema": "npm run ts-node scripts/introspect-graphql-schema.ts && prettier --write schema.graphql && npm run generate",
    "generate": "graphql-codegen",
    "heroku-prebuild": "npm run install-global-packages",
    "heroku-postbuild": "next build",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "migrate": "prisma migrate dev",
    "postinstall": "npx prisma generate && npm run graphql-schema",
    "prepare": "husky install",
    "reset": "prisma migrate reset",
    "seed": "prisma db seed --preview-feature",
    "start": "next start -p $PORT",
    "ts-node": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' -r tsconfig-paths/register",
    "type-check": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^3.7.1",
    "@graphql-codegen/typescript-apollo-client-helpers": "^2.2.5",
    "@graphql-codegen/typescript-operations": "^2.5.5",
    "@prisma/client": "^4.5.0",
    "@tailwindcss/forms": "^0.5.3",
    "apollo-server-micro": "^3.10.3",
    "autoprefixer": "^10.4.12",
    "cross-fetch": "^3.1.5",
    "graphql": "^16.6.0",
    "next": "^13.0.0",
    "postcss": "^8.4.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.1",
    "@graphql-codegen/cli": "^2.13.8",
    "@graphql-codegen/typescript": "^2.8.0",
    "@graphql-codegen/typescript-resolvers": "^2.7.5",
    "@types/node": "^18.11.7",
    "@types/react": "18.0.24",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "eslint": "8.26.0",
    "eslint-config-next": "^13.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "7.31.10",
    "husky": "^8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prisma": "^4.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.8.4",
    "unique-names-generator": "^4.7.1"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run lint",
      "npm run format"
    ]
  }
}
